<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h2><%= t('.header')%></h2>

    <table class="table mt-3">
      <thead class="thead-light">
        <tr>
          <th scope="col" class="sort-by-title pointer">
            <%= t('common.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th scope="col"> <%= t('tests.index.questions') %></th>
          <th scope="col" colspan="3"><%= t('common.actions') %></th>
        </tr>
      </thead>
      <tbody>
          <%= render @tests %>
      </tbody>
    </table>

    <div row>
      <%= link_to t('tests.index.new'), new_admin_test_path, class: 'btn btn-primary'  %>
    </div>
  </div>
</div>
