<div class="row mt-3">
  <div class="col col-md-6">


  <div class="card-body">
    <%= form_with model: [:admin, @test], local: true do |form| %>
    <%= render 'shared/errors', resource: @test %>
    <div class="form-group">
      <p>
        <%= form.label :title %> <br>
        <%= form.text_field :title, id: :test_title, class: 'form-control' %> <br>
      </p>

      <p>
        <%= form.label :level %> <br>
        <%= form.number_field :level, id: :test_level, class: 'form-control' %> <br>
      </p>

      <p class="dropdown">
        <%= form.label :category_id %> <br>
        <%= form.collection_select :category_id, Category.all, :id, :title, promt: true %> <br>
      </p>

      <p><%=form.submit class: 'btn btn-primary mt-3'%></p>
    </div>
    <%end%>
  </div>
</div>
  </div>
