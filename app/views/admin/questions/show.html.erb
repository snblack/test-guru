<h1> Overview question</h1>

<p><%=@question.body%></p>
<table>
  <tr>
    <th>Body</th>
    <th colspan="3">Actions</th>
  </tr>
  <ol>
    <%= render partial: 'admin/answers/answer', collection: @question.answers %>
  </ol>
</table>

<p><%= link_to("New answer", new_admin_question_answer_path(@question), method: :get) %></p>
<p><%= link_to("Edit", edit_admin_question_path, method: :get) %></p>
<p><%= link_to("Delete", admin_question_path, method: :delete) %></p>
<p><%= link_to("Back", admin_test_path(@question.test),  method: :get) %></p>
